<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainListItem"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_18sdp">

    <LinearLayout
        android:id="@+id/customer_complaint"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="@dimen/_1sdp"
        android:paddingBottom="@dimen/_1sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/_2sdp"
                android:layout_weight="1.5">

                <TextView
                    android:id="@+id/account"
                    style="@style/InputTypeText_bot_border"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingEnd="@dimen/_4sdp"
                    android:text="askdjasd"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/table_layout_h_text_size" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/ic_dropdwon_arror" />

            </RelativeLayout>


            <EditText
                android:id="@+id/etSubledgerAccount"
                style="@style/InputTypeText_bot_border"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/_2sdp"
                android:layout_weight="1"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:maxLines="1"
                android:textAlignment="viewStart"
                android:textSize="@dimen/table_layout_h_text_size" />

            <EditText
                android:id="@+id/etLabelOperation"
                style="@style/InputTypeText_bot_border"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/_2sdp"
                android:layout_weight="1.5"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:textAlignment="viewStart"
                android:textSize="@dimen/table_layout_h_text_size" />


            <EditText
                android:id="@+id/etDebit"
                style="@style/InputTypeText_bot_border"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/_2sdp"
                android:layout_weight=".5"
                android:imeOptions="actionDone"
                android:inputType="numberDecimal"
                android:textAlignment="viewEnd"
                android:textSize="@dimen/table_layout_h_text_size" />

            <EditText
                android:id="@+id/etCredit"
                style="@style/InputTypeText_bot_border"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/_2sdp"
                android:layout_weight=".5"
                android:imeOptions="actionDone"
                android:inputType="numberDecimal"
                android:textAlignment="viewEnd"
                android:textSize="@dimen/table_layout_h_text_size" />

            <ImageView
                android:id="@+id/delete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight=".3"
                android:padding="@dimen/_3sdp"
                android:src="@drawable/ic_delete_item" />

        </LinearLayout>

        <View
            android:id="@+id/bottomLine"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dedede" />
    </LinearLayout>
</RelativeLayout>