<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraintItemMultiSelect"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:padding="@dimen/_2sdp">


    <TextView
        android:id="@+id/multiSelectName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lines="1"
        android:maxLines="1"
        android:minLines="1"
        android:padding="10.0dip"
        android:singleLine="true"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/_7sdp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/multiSelectCheckBox"
        app:layout_constraintTop_toTopOf="parent" />


    <CheckBox
        android:id="@+id/multiSelectCheckBox"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:clickable="false"
        android:focusableInTouchMode="false"
        android:focusable="false"
        app:layout_constraintBottom_toBottomOf="@id/multiSelectName"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/multiSelectName" />


</androidx.constraintlayout.widget.ConstraintLayout>