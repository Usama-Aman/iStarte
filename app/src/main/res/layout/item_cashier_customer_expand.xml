<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorDarkBlue"
            android:orientation="vertical"
            android:paddingLeft="@dimen/_2sdp"
            android:paddingTop="@dimen/_2sdp"
            android:paddingRight="@dimen/_2sdp"
            android:paddingBottom="@dimen/_2sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/_2sdp">

                <TextView
                    android:id="@+id/textView4"
                    style="@style/genral_4s"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/cdcLabelOrderNo"
                    android:textColor="@color/detail_h_color" />

                <TextView
                    android:id="@+id/textView5"
                    style="@style/genral_4s"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/cdcLabelOrderDate"
                    android:textAlignment="center"
                    android:textColor="@color/detail_h_color" />

                <TextView
                    android:id="@+id/textView6"
                    style="@style/genral_4s"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/cdcLabelOrderStatus"
                    android:textAlignment="center"
                    android:textColor="@color/detail_h_color" />

                <TextView
                    android:id="@+id/textView7"
                    style="@style/genral_4s"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/cdcLabelDueDate"
                    android:textAlignment="center"
                    android:textColor="@color/detail_h_color" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#2c6175" />

            <LinearLayout
                android:id="@+id/expand_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/_2sdp">

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>