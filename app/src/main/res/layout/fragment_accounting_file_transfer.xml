<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/_4sdp"
    android:paddingTop="@dimen/_5sdp"
    android:paddingRight="@dimen/_4sdp"
    android:paddingBottom="@dimen/margin_10"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <CheckBox
            android:id="@+id/aft_third_party_download_upload"
            style="@style/check_box_6s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_weight="1"
            android:button="@drawable/checkbox_selector"
            android:paddingStart="@dimen/_5sdp"
            android:text="@string/aftLabelThirdPartyDownload" />


        <CheckBox
            android:id="@+id/aft_order_transfer"
            style="@style/check_box_6s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_weight="1"
            android:button="@drawable/checkbox_selector"
            android:paddingStart="@dimen/_5sdp"
            android:text="@string/aftLabelOrderTransfer" />


        <CheckBox
            android:id="@+id/aft_customerList_transfer"
            style="@style/check_box_6s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_weight="1"
            android:button="@drawable/checkbox_selector"
            android:paddingStart="@dimen/_5sdp"
            android:text="@string/aftLabelCustomerListTransfer" />


        <CheckBox
            android:id="@+id/aft_inventory_transfer"
            style="@style/check_box_6s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_weight="1"
            android:button="@drawable/checkbox_selector"
            android:paddingStart="@dimen/_5sdp"
            android:text="@string/aftLabelInventoryTransfer" />


        <CheckBox
            android:id="@+id/aft_product_list_transfer"
            style="@style/check_box_6s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_weight="1"
            android:button="@drawable/checkbox_selector"
            android:paddingStart="@dimen/_5sdp"
            android:text="@string/aftLabelProductListTransfer" />


        <CheckBox
            android:id="@+id/aft_supplier_list_transfer"
            style="@style/check_box_6s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_weight="1"
            android:button="@drawable/checkbox_selector"
            android:paddingStart="@dimen/_5sdp"
            android:text="@string/aftLabelSupplierListTransfer" />


        <CheckBox
            android:id="@+id/aft_invoice_list_transfer"
            style="@style/check_box_6s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_weight="1"
            android:button="@drawable/checkbox_selector"
            android:paddingStart="@dimen/_5sdp"
            android:text="@string/aftLabelInvoiceListTransfer" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/btn_aft_save"
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/height_40"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginEnd="@dimen/_3sdp"
                android:layout_marginBottom="@dimen/_3sdp"
                android:background="@drawable/round_box_blue"
                android:gravity="center">

                <TextView
                    style="@style/white_button"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:drawableLeft="@drawable/ic_pro_save"
                    android:drawablePadding="@dimen/_5sdp"
                    android:gravity="center"
                    android:text="@string/aftBtnSave" />

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

</ScrollView>